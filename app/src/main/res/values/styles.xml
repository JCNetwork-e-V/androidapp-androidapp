<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Set standard text here -->
        <item name="android:text">@font/roboto_light</item>
        <item name="android:textColor">@color/textColorLight</item>
        <!-- To set bottom navigation bar to primary color -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/black</item>


        <!-- Added transition theme-->
        <!-- TODO Find out how to make proper sliding transitions -->
<!--        <item name="android:windowActivityTransitions">true</item>-->
<!--&lt;!&ndash;        <item name="android:windowEnterTransition">@anim/slide_down</item>&ndash;&gt;-->
<!--&lt;!&ndash;        <item name="android:windowExitTransition">@anim/slide_up</item>&ndash;&gt;-->
<!--        <item name="android:windowAnimationStyle">@style/CustomSlidingAnimation</item>-->
    </style>



    <!-- Main Theme -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Set standard text here -->
        <item name="android:text">@font/roboto_light</item>
        <item name="android:textColor">@color/textColorLight</item>
        <!-- To set bottom navigation bar to primary color -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>


    <!-- App theme for Settings Activity -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Set standard text here -->
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Transition theme to animate transitions-->

    <!--  Progress Bar theme  -->
    <style name="PointProgressBarTheme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:progressDrawable">@drawable/point_progress_bar</item>
    </style>

    <!-- Point Categories Label theme -->
    <style name="PointLabelTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Point Categories Text theme -->
    <style name="PointTextTheme" parent="@style/PointLabelTheme">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_goneMarginBottom">8dp</item>
    </style>

    <!-- Point Divider theme -->
    <style name="PointDividerTheme">
        <item name="android:background">@color/textColorLight</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Login Activity transition theme -->
    <style name="Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Plan/Schedule Activity transition theme -->

    <!-- Portale Styles -->
    <style name="PortaleImageButtonTheme">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:contentDescription">@string/portalverlinkungsknopf</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/hexagon_button</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="PortaleTitleTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="PortaleDescriptionTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!--    Registration styles-->
    <style name="CheckBoxStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinkedTextStyle" >
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>