<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradient"
    android:focusableInTouchMode="true"
    tools:context="com.jcnetwork.android.app1.ui.MyQRCode"
    style="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/personalDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hier ist dein persÃ¶nlicher Business Card QR. Lasse eine neue Bekanntschaft diesen per Foto App einskannen, um direkt deine Kontaktdaten zu bekommen und weiterhin mit dir in Kontakt zu bleiben!"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/qr_code_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@android:color/white"
                android:contentDescription="QR code" />

            <EditText
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_edit_text_box"
                android:drawableStart="@drawable/ic_person_edit_text"
                android:drawablePadding="12dp"
                android:ems="10"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:singleLine="true" />

            <EditText
                android:id="@+id/email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_edit_text_box"
                android:drawableStart="@drawable/ic_email_edit_text"
                android:drawablePadding="12dp"
                android:ems="10"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <EditText
                android:id="@+id/phone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_edit_text_box"
                android:drawableStart="@drawable/ic_smartphone_edit_text"
                android:drawablePadding="12dp"
                android:ems="10"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="Handy"
                android:inputType="phone"
                android:singleLine="true" />

            <EditText
                android:id="@+id/note_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_edit_text_box"
                android:drawableStart="@drawable/ic_notes_edit_text"
                android:drawablePadding="12dp"
                android:ems="10"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="Notiz"
                android:inputType="textMultiLine"
                android:singleLine="true" />

            <Button
                android:id="@+id/generate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gradient_button"
                android:text="Update QR Code"
                android:textColor="@android:color/white" />
        </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>